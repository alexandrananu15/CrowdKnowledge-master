@model CrowdKnowledge2.Models.Articol


@using (Html.BeginForm(actionName: "Edit", controllerName: "Articole"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.HiddenFor(m => m.IDArticol)
    <br />
    @Html.Label("TitluArticol", "Titlu Articol")
    <br />
    @*@Html.Editor("TitluArticol")*@
    @Html.TextBox("TitluArticol", null, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.TitluArticol, "", new { @class = "text-danger" })
    <br />
    <br />

    @Html.Label("ContinutArticol", "Descrierea Articolului")
    <br />
    @Html.TextArea("ContinutArticol", Model.ContinutArticol, new { @class = "form-control summernote" })
    @Html.ValidationMessageFor(m => m.ContinutArticol, "", new { @class = "text-danger" })
    <br />
    <br />


    @Html.HiddenFor(m => m.Data)
    <br />

    <label>Selectati domeniul</label>
    @Html.DropDownListFor(m => m.IDDomeniu,
        new SelectList(Model.Dom, "Value", "Text"),
        "Selectati domeniul", new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.IDDomeniu, "", new { @class = "text-danger" })
    <br />

    <button class="btn btn-sm btn-success" type="submit">Modifica articol</button>
}

